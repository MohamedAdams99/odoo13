<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="apps_settings_block" data-string="Hospital" string="Hospital" data-key="clinic">
                    <h2>Hospital Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="o_setting_left_pane">
                            <label for="note" string="Default Note"/>
<!--                            <field name="note"/>-->
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_hospital_config_settings" model="ir.actions.act_window">
        <field name="name">Hospital Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'clinic'}</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_hospital_config" name="Configuration" parent="hospital_root" sequence="100"/>
    <menuitem id="menu_hospital_settings" name="Settings" parent="menu_hospital_config" action="action_hospital_config_settings" sequence="10"/>
</odoo>