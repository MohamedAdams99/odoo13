<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="open_patient_appointments" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('patient_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>
    <!-- model.name inherit form view -->
    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.oreder.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add your xpath here -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="patient_name"/>            
            </xpath>
        </field>
    </record>

    <!-- hospital.patient form view -->
    <record id="hospital_view_form" model="ir.ui.view">
        <field name="name">Patients</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <header>
                    <button name="%(clinic.create_appointment_wizard)d" string="Create Appointment" type="action"
                            class="oe_highlight" context="{'default_patient_id': active_id}">
                    </button>
                    <button name="action_send_card" type="object" string="Send By Email" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">   
                            <button name="open_patient_appointments"
                                    type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="appointment_count" string="Appointments" widget="statinfo"/>
                            </button>
                            <button name="%(open_patient_appointments)d"
                                    type="action" class="oe_stat_button" icon="fa-usd">
                                <field name="appointment_count" string="Appointments" widget="statinfo"/>
                            </button>
                                <button name="active" type="object" class="oe_stat_button" icon="fa-archive">
                                    <field name="active" string="Active" widget="boolean_button"/>
                                </button>
                    </div>

                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="patient_name"/>           
                        </h1>
                    </div>
                        <group col="4">
                            <field name="patient_name_upper"/>
                            <field name="patient_age"/>
                            <field name="gender"/>
                            <field name="doctor_id" options="{'no_create_edit': True, 'no_create':True}"/>
                            <field name="doctor_gender"/>
                            <field name="user_id"/>
                            <field name="age_group"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group col="4">
                            <field name="test"/>         
                            <field name="name_seq" readonly="1"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <!-- hospital.patient tree view -->
    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">Patients</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name_seq"/>
                <field name="patient_name"/>
                <field name="patient_age"/>
                <field name="doctor_id"/>
                <field name="age_group"/>
                <field name="gender"/> 
                <field name="notes"/>
    
            </tree>
        </field>
    </record>

    <record id="patient_kanban" model="ir.ui.view">
         <field name="name">hospital.patient.kanban</field>
         <field name="model">hospital.patient</field>
         <field name="priority">5</field>
         <field name="arch" type="xml">
             <kanban default_group_by="doctor_id">
                 <field name="id"/>
                 <field name="image"/>
                 <field name="doctor_id"/>
                 <field name="patient_age"/>
                 <field name="email"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hospital_patient_kanban">
                                <t t-if="record.image.raw_value">
                                    <div class="o_kanban_image_fill_left d-none d-md-block"
                                         t-attf-style="background-image:url('#{kanban_image('hospital.patient', 'image', record_id.raw_value)}')">
                                    </div>
                                </t>
                                <t t-else="">
                                    <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                    <div class="o_kanban_record_bottom"/>
                                    <ul>
                                        <li t-esc="record.patient_age.value"/>
                                        <li t-esc="record.doctor_id.value"/>
                                        <li t-esc="record.email.value"/>

<!--                                        <li>Age: <field name="patient_age"/></li>-->
<!--                                        <li>Doctor: <field name="doctor_id"/></li>-->
<!--                                        <li>Email: <field name="email"/></li>-->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
             </kanban>
         </field>
    </record>

    <!-- hospital.patient search view -->
    <record id="hospital_patient_view_search" model="ir.ui.view">
        <field name="name">hospital.patient.view.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name" filter_domain="['|', ('patient_name', 'ilike', self), ('name_seq', 'ilike', self)]"/>
                <field name="name_seq"/>
                <field name="patient_name"/>
                <separator />
                <filter string='Male' name='male' domain="[('gender', '=', 'male')]"/>
                <filter string='Female' name='female' domain="[('gender', '=', 'female')]"/>
                <group expand="0" string='Group By'>
                    <filter string='Gender' name='gender' context="{'group_by':'gender'}"/>
                </group>

            </search>
        </field>
    </record>
    <!-- action window -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_male':'1'}</field>
    </record>     
    <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
    <menuitem id="hospital_root" name="Hospital"/>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="hospital_patient" name="Patients" parent="hospital_root" action="action_patient" />
    <menuitem id="create_appointment" name="Create Appointment" parent="hospital_root" action="create_appointment_wizard" />

</odoo>
